<% provide :head_tags do %>
    <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
        initMap(<%= @place.latitude%>, <%= @place.longitude%>)
    });
    </script>
<% end %>

<div class="jumbotron text-center" style="margin: auto; background-color:#298689; color: black; font-family: tahoma;";>
  <h1 style="font-size: 4rem;"><strong>Where's The Car?</strong></h1>
  <p id="notice"><%= notice %></p>
</div>

  <div id="map" style="height: 40rem; margin: auto;"></div>

  <div class="" style="text-align:center;">
    <h2 style="margin-top: 2rem; font-size: 3rem;">Park the Car</h2>

    <%= button_to [:set_location, @place], class: "btn ", style: "background-color: red; text-align: center; border-radius: 50%; padding: 2rem; margin: 2rem auto;" do %>
        <%= image_tag "parking.png", style: "margin: auto;"%>
    <% end %>

  </div>

  <div class=" jumbotron text-center" style="background-color:#298689;">
    <h3 style="color: black;">Last Updated: <%= @place.updated_at.in_time_zone("Eastern Time (US & Canada)").strftime("%a %B %d at %I:%M%p") %></h3>
  </div>
